@model IEnumerable<Newarren_fall24_Assignment3.Models.Actor>
@{
    ViewData["Title"] = "index";
}

<h1>Actors and Actresses</h1>
<hr />
<a id="add_button" asp-action="Create"> Add new Actor </a>
<hr />

<div class="actor-grid">
    @foreach (var actor in Model)
    {
    <div class="bocks">
        <div class="actor-item">
             <a asp-action="Details" asp-route-id="@actor.Id">
             <p id="name">@actor.Name</p>
             </a>
                <br />
        </div>
        <div class="photo">
            @if (actor.Photo != null)
            {
                var base64 = Convert.ToBase64String(actor.Photo);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                <div class="photo">
                    <a asp-action="Details" asp-route-id="@actor.Id">
                         <img src="@imgSrc" class="img_thumbnail1" height="100" width="100" />
                    </a> 
                </div>
            }
        </div>
    </div>
    }
</div>


<style>

    .img_thumbnail1{
        border: 1px solid #dee2e6;
        height: 300px;
        width: 300px;
        object-fit: cover;
        border-radius: 5px;
    }

    .bocks{
        display: flex;
        flex-direction: column; /* Stacks name above photo */
        align-items: center; /* Center-aligns items */
        margin: 10px; /* Adds space around each actor item */
        width: 30%; /* Adjust based on desired size */
        height: 100%;
        border-color: black;
    }

    .actor-grid{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        background-color: lightgray;
    }

    #add_button{
        background-color: cadetblue; /* Green background */
        color: white; /* White text */
        padding: 5px 10px; /* Padding for the button */
        text-decoration: none; /* Remove underline */
        border-radius: 5px; /* Rounded corners for the button */
        transition: background-color 0.3s; /* Smooth transition */
        display: inline;
    }

        #add_button:hover {
            background-color: cadetblue;
        }
    #name{
        background-color: cadetblue; /* Green background */
        color: white; /* White text */
        padding: 5px 10px;
        width: 100%;
        text-decoration: none; 
        border-radius: 5px; 
        transition: background-color 0.3s; 
        display: inline;
        font-size: 9pt;
    }

</style>

